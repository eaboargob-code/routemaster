rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // USERS
    // Admins can manage users in their school.
    // Users can read their own profile.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow read, write: if request.auth.uid != null 
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.schoolId == get(/databases/$(database)/documents/users/$(userId)).data.schoolId;
    }

    // ROUTES
    // Admins can manage routes in their school.
    // Drivers can read any route (they only know the ID of their assigned one).
    match /routes/{routeId} {
      allow read, write: if request.auth.uid != null 
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.schoolId == resource.data.schoolId;
      
      allow read: if request.auth.uid != null 
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'driver';
    }

    // BUSES
    // Admins can manage buses in their school.
    // Drivers can read the bus assigned to them in their school.
    match /buses/{busId} {
       allow read, write: if request.auth.uid != null 
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.schoolId == resource.data.schoolId;

      allow read: if request.auth.uid != null 
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'driver'
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.schoolId == resource.data.schoolId
        && request.auth.uid == resource.data.driverId;
    }

    // TRIPS
    // Drivers can create their own trips.
    // Admins can view all trips in their school.
    match /trips/{tripId} {
      allow read, write: if request.auth.uid != null
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.schoolId == resource.data.schoolId;

      allow create: if request.auth.uid != null
        && request.auth.uid == request.resource.data.driverId
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.schoolId == request.resource.data.schoolId;

       allow read, update: if request.auth.uid != null
        && request.auth.uid == resource.data.driverId;
    }
  }
}
